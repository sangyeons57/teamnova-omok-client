<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSetting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textSettingTitle"
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:textColor="?attr/colorOnSurface"
                    android:text="@string/dialog_setting_title" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSettingClose"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_close" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSettingGoogle"
                style="@style/Widget.TeamnovaOmok.SettingsButton.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/dialog_setting_google_link"
                app:icon="@drawable/ic_setting_google" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSettingProfile"
                    style="@style/Widget.TeamnovaOmok.SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/dialog_setting_profile_button"
                    app:icon="@drawable/ic_setting_profile" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSettingLanguage"
                    style="@style/Widget.TeamnovaOmok.SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/dialog_setting_language"
                    app:icon="@drawable/ic_setting_language" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSettingPrivacy"
                    style="@style/Widget.TeamnovaOmok.SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/dialog_setting_privacy"
                    app:icon="@drawable/ic_setting_privacy" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSettingTerms"
                    style="@style/Widget.TeamnovaOmok.SettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/dialog_setting_terms"
                    app:icon="@drawable/ic_setting_terms" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSettingLogout"
                    style="@style/Widget.TeamnovaOmok.SettingsButton.Destructive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/dialog_setting_logout"
                    app:icon="@drawable/ic_setting_logout" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSettingWithdraw"
                    style="@style/Widget.TeamnovaOmok.SettingsButton.Destructive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/dialog_setting_withdraw"
                    app:icon="@drawable/ic_setting_withdraw" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
