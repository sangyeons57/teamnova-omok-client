<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/profile_icon_item_spacing">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProfileIcon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_icon_item_size"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/profile_icon_item_corner_radius"
        app:cardElevation="0dp"
        app:rippleColor="@color/profile_icon_ripple"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="@dimen/profile_icon_item_stroke_width">

        <com.example.core_api.sprite.SpriteView
            android:id="@+id/imageProfileIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:padding="@dimen/profile_icon_item_image_padding" />

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
