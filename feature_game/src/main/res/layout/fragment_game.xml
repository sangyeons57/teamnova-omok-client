<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context="com.example.feature_game.game.presentation.ui.GameFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPlayerTopLeft"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toStartOf="@id/cardMatchInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/playerSlotTopLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp">


            <com.example.core_api.sprite.SpriteView
                android:id="@+id/imagePlayerTopLeft"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/game_player_avatar_content_description"
                android:src="@drawable/ic_game_player_placeholder"
                />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textPlayerTopLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/game_player_empty_slot"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMatchInfo"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@id/cardPlayerTopLeft"
        app:layout_constraintEnd_toStartOf="@id/cardPlayerTopRight"
        app:layout_constraintStart_toEndOf="@id/cardPlayerTopLeft"
        app:layout_constraintTop_toTopOf="@id/cardPlayerTopLeft">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textRemainingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_remaining_time_placeholder"
                android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPlayerTopRight"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardMatchInfo"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/playerSlotTopRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textPlayerTopRight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/game_player_empty_slot"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <com.example.core_api.sprite.SpriteView
                android:id="@+id/imagePlayerTopRight"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/game_player_avatar_content_description"
                android:src="@drawable/ic_game_player_placeholder" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPlayerBottomLeft"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@id/cardBannerAd"
        app:layout_constraintEnd_toStartOf="@id/buttonGameInfoNavigation"
        app:layout_constraintStart_toStartOf="parent"
        >

        <LinearLayout
            android:id="@+id/playerSlotBottomLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp">

            <com.example.core_api.sprite.SpriteView
                android:id="@+id/imagePlayerBottomLeft"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/game_player_avatar_content_description"
                android:src="@drawable/ic_game_player_placeholder" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textPlayerBottomLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/game_player_empty_slot"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPlayerBottomRight"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@id/cardBannerAd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonGameInfoNavigation" >

        <LinearLayout
            android:id="@+id/playerSlotBottomRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textPlayerBottomRight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="@string/game_player_empty_slot"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <com.example.core_api.sprite.SpriteView
                android:id="@+id/imagePlayerBottomRight"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@string/game_player_avatar_content_description"
                android:src="@drawable/ic_game_player_placeholder" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGameInfoNavigation"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:text="@string/game_info_navigation_button_label"
        app:layout_constraintBottom_toTopOf="@id/cardBannerAd"
        app:layout_constraintEnd_toStartOf="@id/cardPlayerBottomRight"
        app:layout_constraintStart_toEndOf="@id/cardPlayerBottomLeft"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBoardPlaceholder"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toTopOf="@id/buttonGameInfoNavigation"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardMatchInfo"
        app:layout_constraintVertical_bias="0.5">

        <com.example.feature_game.game.presentation.ui.OmokBoardView
            android:id="@+id/omokBoardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/game_board_placeholder"
            android:padding="12dp"
            app:boardColumns="10"
            app:boardRows="10" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBannerAd"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textBannerLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/game_banner_placeholder"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="?attr/colorOnSurface" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
